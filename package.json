  "types": "./dist/index.d.ts",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs",
      "main": "./dist/index.cjs.js",
      "umd": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
