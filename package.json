    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "storybook": "8.6.12",
    "tsup": "8.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.0"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x || 19.x",
    "react-dom": "16.x || 17.x || 18.x || 19.x"
